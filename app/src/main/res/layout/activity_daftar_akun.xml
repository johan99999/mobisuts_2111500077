<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".DaftarAkun">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_logo_foreground" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="REGISTRASI"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/btnUpfoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/IvProfile"
                    android:layout_width="161dp"
                    android:layout_height="139dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_profile_foreground" />

                <Button
                    android:id="@+id/btnUpfoto"
                    android:layout_width="189dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Upload Pas Foto"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/IvProfile"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <EditText
                    android:id="@+id/txtNama"
                    android:layout_width="354dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="92dp"
                    android:background="@drawable/bundar"
                    android:ems="10"
                    android:hint="NAMA LENGKAP"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/txtHp"
                    android:layout_width="354dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bundar"
                    android:ems="10"
                    android:hint="NOMOR WHATSAPP"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTtgll"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/txtSekolah"
                    android:layout_width="354dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bundar"
                    android:ems="10"
                    android:hint="ASAL SEKOLAH"
                    android:inputType="text"
                    android:maxLength="50"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtHp" />

                <EditText
                    android:id="@+id/txtAlamat"
                    android:layout_width="354dp"
                    android:layout_height="106dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bundar"
                    android:ems="15"
                    android:gravity="start|top"
                    android:hint="ALAMAT LENGKAP"
                    android:inputType="textMultiLine"
                    android:maxLength="160"
                    android:maxLines="2"
                    android:minHeight="48dp"
                    android:minLines="2"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSekolah" />

                <EditText
                    android:id="@+id/txtTtgll"
                    android:layout_width="354dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bundar"
                    android:ems="10"
                    android:hint="TEMPAT TANGGAL LAHIR"
                    android:inputType="text"
                    android:maxLength="50"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNama"
                    tools:ignore="TouchTargetSizeCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#CDDC39"
        android:text="DAFTAR"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>